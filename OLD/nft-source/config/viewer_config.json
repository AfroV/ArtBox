{
  "ipfs_gateway": "http://127.0.0.1:8080/ipfs/",
  "collections": [
    {
      "name": "Auto-discovered NFTs",
      "metadata_file": "/home/pi/nft-metadata/sample_collection.json"
    }
  ],
  "display": {
    "interval": 10,
    "random_order": true,
    "show_metadata": true,
    "transition_duration": 0.5,
    "fullscreen": true
  },
  "cache": {
    "max_images_in_memory": 5,
    "preload_next": true
  },
  "web_interface": {
    "enabled": true,
    "port": 5000,
    "host": "0.0.0.0"
  },
  "supported_formats": [".jpg", ".jpeg", ".png", ".gif", ".webp", ".bmp"],
  "error_image_path": null
}
